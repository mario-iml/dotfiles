#!/bin/bash

# Array to hold the sanitized arguments
clean_args=()

# Iterate through all arguments passed by the IDE
for arg in "$@"; do
    if [[ "$arg" == "root:root:" ]]; then
        # Fix the specific Antigravity syntax error
        clean_args+=("root:root")
    else
        # Keep other arguments exactly as they are
        clean_args+=("$arg")
    fi
done

# Execute the actual podman binary with the cleaned arguments
# Using absolute path prevents infinite loops if you have other aliases
exec /usr/bin/podman "${clean_args[@]}"
